/*CRIAÇÃO DA TABELA DEFININDO O NOME DA TABELA, NOME DAS COLUNAS E O TIPO DOS DADOS*/
CREATE TABLE T_DM_ATIVIDADE_GITHUB (
  	DESCRICAO_FILIAIS VARCHAR(255),
  	DESCRICAO_BLOCOS VARCHAR(3),
  	DESCRICAO_AULAS	VARCHAR(255),
  	DESCRICAO_PROFESSORES VARCHAR(255),
  	PROFESSOR_MAIS_LEGAL BOOLEAN
);

/*INSERINDO DADOS NA TABELA CRIADA, ASSOCIANDO OS CAMPOS AOS VALORES QUE RECEBERÃO*/
INSERT INTO T_DM_ATIVIDADE_GITHUB (DESCRICAO_FILIAIS, DESCRICAO_BLOCOS, DESCRICAO_AULAS, DESCRICAO_PROFESSORES, PROFESSOR_MAIS_LEGAL) VALUES('ITAJAI','D6','INT. CIÊNCIA COMPUTAÇÃO','THIAGO FELSKI',true);
INSERT INTO T_DM_ATIVIDADE_GITHUB (DESCRICAO_FILIAIS, DESCRICAO_BLOCOS, DESCRICAO_AULAS, DESCRICAO_PROFESSORES, PROFESSOR_MAIS_LEGAL) VALUES('KOBRASOL','F5','ALGORITMO E PROGRAMACAO','RODRIGO RAMOS',false);
INSERT INTO T_DM_ATIVIDADE_GITHUB (DESCRICAO_FILIAIS, DESCRICAO_BLOCOS, DESCRICAO_AULAS, DESCRICAO_PROFESSORES, PROFESSOR_MAIS_LEGAL) VALUES('ITAJAI','D4','ALGEBRA LINEAR E GEOMETR. ANALITICA','ANDRESSA PINHEIRO',false);

/*SEMPRE IMPORTANTE COMMITAR AS OPERAÇÕES "DML" = DATA MANIPULATION LANGUAGE, DENTRO BANCO DE DADOS RELACIONAIS*/
COMMIT;

/*CONSULTANDO A TABELA CRIADA E ADICIONANDO UMA CONDIÇÃO NA COLUNA QUE AVALIA O PROFESSOR MAIS LEGAL, PARA QUANDO FOR 1 (VERDADEIRO) ENTÃO DAR UMA DESCRIÇÃO, CASO CONTRÁRIO, DAR OUTRA DESCRIÇÃO*/
SELECT
	DESCRICAO_FILIAIS,
    DESCRICAO_BLOCOS,
    DESCRICAO_AULAS,
    DESCRICAO_PROFESSORES,
    PROFESSOR_MAIS_LEGAL,
    CASE
    	WHEN PROFESSOR_MAIS_LEGAL = 1 THEN 'PROFESSOR MAIS LEGAL'
        ELSE 'NÃO É O PROFESSOR MAIS LEGAL'
    END AS DESCRICAO_PROFESSOR_MAIS_LEGAL
FROM
	T_DM_ATIVIDADE_GITHUB
;
